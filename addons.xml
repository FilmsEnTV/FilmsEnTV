<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.genesis"
       name="FilmsEnTV 1"
       version="1.0"
       provider-name="FilmsEnTV">
  <requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.metahandler" version="1.0.0"/>
		<import addon="script.module.urlresolver" version="1.0.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
		<import addon="script.common.plugin.cache" version="0.9.1"/>
		<import addon="script.module.parsedom" version="0.9.1"/>
		<import addon="plugin.video.youtube" optional="true"/>
  </requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="startup">
	</extension>
 	<extension point="xbmc.addon.metadata">
		<summary lang="en">The origins of streaming</summary>
		<description lang="en">Visit TVADDONS.ag for support</description>
		<disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon. The author does not have any affiliation with the content provider.</disclaimer>
		<forum>http://filmsentv.nl/forums/</forum>
		<source>https://github.com/FilmsEnTV/FilmsEnTV/</source>
		<website>https://github.com/FilmsEnTV/</website>
		<platform>all</platform>
	</extension>
</addon>

<addon id="repository.FilmsEnTV" name="FilmsEnTV" version="1.0" provider-name="FilmsEnTV">
	<extension point="xbmc.addon.repository" name="FilmsEnTV Addon Repository">
		<info compressed="false">https://github.com/FilmsEnTV/FilmsEnTV/addons.xml</info>
		<checksum>https://github.com/FilmsEnTV/FilmsEnTV/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/FilmsEnTV/FilmsEnTV/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>FilmsEnTV's addons</summary>
		<description>Download and install addons from FilmsEnTV</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
